<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyboardView" parent="android:Widget">
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionKeyBackground">@drawable/action_key_background</item>
        <item name="numKeyBackground">@drawable/num_key_background</item>
        <item name="capsLockBackground">@drawable/popup_key_background</item>
        <item name="keyBackground">@drawable/key_background</item>
        <item name="keyBackgroundPressed">@drawable/popup_key_background</item>
        <item name="keyTextSize">22sp</item>
        <item name="keyTextColor">@android:color/white</item>
        <item name="keyPreviewOffset">-12dp</item>
        <item name="keyPreviewHeight">80dp</item>
        <item name="labelTextSize">14sp</item>
        <item name="verticalCorrection">-10dp</item>
        <item name="shadowColor">@android:color/transparent</item>
        <item name="shadowRadius">2.75</item>
        <item name="keyPreviewLayout">@layout/popup_key_layout</item>
    </style>

    <style name="EmojiKeyboardView" parent="android:Widget">
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionKeyBackground">@drawable/action_key_background</item>
        <item name="numKeyBackground">@drawable/num_key_background</item>
        <item name="capsLockBackground">@drawable/popup_key_background</item>
        <item name="keyBackground">@android:color/transparent</item>
        <item name="keyBackgroundPressed">@drawable/popup_key_background</item>
        <item name="keyTextSize">22sp</item>
        <item name="keyTextColor">@android:color/white</item>
        <item name="keyPreviewOffset">-12dp</item>
        <item name="keyPreviewHeight">80dp</item>
        <item name="labelTextSize">14sp</item>
        <item name="verticalCorrection">-10dp</item>
        <item name="shadowColor">@android:color/transparent</item>
        <item name="shadowRadius">2.75</item>
        <item name="keyPreviewLayout">@layout/popup_key_layout</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowBackground">#393939</item>
    </style>

    <style name="PreferenceScreenTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PreferenceItemTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PreferenceItemSummary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>
