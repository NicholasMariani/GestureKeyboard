<?xml version="1.0" encoding="utf-8"?>
<!-- Word Suggestions Bar -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suggestionsBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray"
    android:padding="8dp">

    <!-- Suggestions TextViews -->
    <TextView
        android:id="@+id/suggestion1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Suggestion1"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/suggestion2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Suggestion2"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/suggestion3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Suggestion3"
        android:textColor="@android:color/white"
        android:gravity="center"/>
</LinearLayout>