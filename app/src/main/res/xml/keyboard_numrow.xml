<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:app="http://schemas.android.com/apk/res-auto"
    app:keyWidth="10%p"
    app:keyHeight="6%p"
    app:horizontalGap="5dp"
    app:verticalGap="9dp">

    <Row app:keyHeight="5%p">
        <Key app:codes="49" app:keyLabel="1"/>
