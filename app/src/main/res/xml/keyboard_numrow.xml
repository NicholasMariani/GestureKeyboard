        <Key app:codes="74" app:keyLabel="J"/>
        <Key app:codes="75" app:keyLabel="K"/>
        <Key app:codes="76" app:keyLabel="L"/>
    </Row>

    <Row>
        <Key app:codes="-1" app:keyLabel="Shift" app:keyWidth="15%p" app:isModifier="true"/>
        <Key app:codes="90" app:keyLabel="Z"/>
        <Key app:codes="88" app:keyLabel="X"/>
        <Key app:codes="67" app:keyLabel="C"/>
        <Key app:codes="86" app:keyLabel="V"/>
        <Key app:codes="66" app:keyLabel="B"/>
        <Key app:codes="78" app:keyLabel="N"/>
        <Key app:codes="77" app:keyLabel="M"/>
        <Key app:codes="-5" app:keyLabel="Del" app:keyWidth="15%p" app:isRepeatable="true" app:isSticky="true"/>
    </Row>

    <Row>
        <Key app:codes="-2" app:keyLabel="\?123" app:keyWidth="15%p" app:isSticky="true"/>
        <Key app:codes="44" app:keyLabel=","/>
        <Key app:codes="32" app:keyLabel="" app:keyWidth="50%p"/>
        <Key app:codes="46" app:keyLabel="."/>
        <Key app:codes="-4" app:keyLabel="Send" app:keyWidth="15%p" app:isSticky="true"/>
    </Row>

</Keyboard>